<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paperify | Welcome</title>
    
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,700;0,900;1,700&family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        :root { 
            --brand-green: #19c880; 
            --deep-navy: #3f3a64; 
            --soft-bg: #f8f1eb;
        }

        body { font-family: 'Inter', sans-serif; background-color: #ffffff; color: var(--deep-navy); overflow-x: hidden; }
        h1, h2, h3 { font-family: 'Playfair Display', serif; }

        .custom-container { max-width: 1320px; margin: 0 auto; padding: 0 20px; }
        
        /* Video Hero - Responsive Width & Centered */
        .video-hero {
            width: 80%; /* Your requested width */
            margin: 0 auto; /* Centers the video */
            max-width: 1100px;
            aspect-ratio: 16 / 9;
            height: auto;
            border-radius: 40px;
            overflow: hidden;
            box-shadow: 0 40px 80px rgba(63, 58, 100, 0.15);
            border: 8px solid white;
            background: #000;
        }

        /* Mobile adjustments for video height and width */
        @media (max-width: 768px) {
            .video-hero {
                width: 100%; /* Full width on small screens */
                aspect-ratio: 4 / 3;
                height: auto;
                border-radius: 20px;
                border-width: 4px;
            }
        }

        /* Class Options Animation */
        #classOptions {
            display: none;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease;
        }

        #classOptions.show {
            display: grid;
            opacity: 1;
            transform: translateY(0);
        }

        .grade-card {
            transition: all 0.3s ease;
            border: 1px solid #eee;
        }
        .grade-card:hover {
            border-color: var(--brand-green);
            background: #f0fff9;
            transform: translateY(-5px);
        }

        .nav-link:hover { color: var(--brand-green); transition: 0.3s; }
    </style>
</head>
<body>

    <nav class="bg-[#f8f1eb] py-4 md:py-6 sticky top-0 z-50">
        <div class="custom-container flex justify-between items-center">
            <div class="text-2xl md:text-3xl font-black tracking-tighter text-[#3f3a64]">Paper<span class="text-[#19c880]">ify</span></div>
            
            <div class="hidden lg:flex items-center gap-12 text-[15px] font-bold text-[#3f3a64]">
                <a href="#" class="nav-link">Home</a>
                <a href="#" class="nav-link">Courses</a>
                <a href="/paper" class="nav-link">Generate</a>
                
                <div class="flex items-center gap-6 ml-4 border-l pl-8 border-gray-300">
                    <i class="fa-solid fa-cart-shopping text-gray-400 cursor-pointer"></i>
                    <i class="fa-regular fa-user-circle text-xl text-gray-400 cursor-pointer"></i>
                </div>
            </div>
            <div class="lg:hidden text-2xl text-[#3f3a64]">
                <i class="fa-solid fa-bars"></i>
            </div>
        </div>
    </nav>

    <main class="custom-container py-8 md:py-12">
        
        <div class="mb-12">
            <div class="video-hero">
                <video controls class="w-full h-full object-contain">
                    <source src="../vedio/demo.mp4" >
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>

        <div class="text-center mb-16 px-4">
            <h2 class="text-xl md:text-2xl font-bold italic text-gray-400 mb-8">"A piece of paper cannot decide our future"</h2>
            
            <button onclick="toggleClasses()" id="mainBtn" class="w-full md:w-auto bg-[#19c880] text-white px-8 md:px-12 py-5 md:py-6 rounded-2xl font-black text-lg md:text-xl shadow-xl hover:bg-[#3f3a64] transition-all transform hover:scale-105 active:scale-95">
                <i class="fa fa-graduation-cap mr-3"></i> Get Started: Choose Your Class
            </button>
        </div>

        <div id="classOptions" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 pb-20">
            
            <a href="/board?grade=9" class="grade-card p-8 md:p-10 rounded-[35px] text-center bg-white group">
                <div class="text-4xl font-black text-gray-200 group-hover:text-[#19c880] mb-4">09</div>
                <h3 class="text-xl md:text-2xl font-bold">9th Class</h3>
                <p class="text-sm text-gray-400">Matric Part I</p>
            </a>

            <a href="/board?grade=10" class="grade-card p-8 md:p-10 rounded-[35px] text-center bg-white group">
                <div class="text-4xl font-black text-gray-200 group-hover:text-[#19c880] mb-4">10</div>
                <h3 class="text-xl md:text-2xl font-bold">10th Class</h3>
                <p class="text-sm text-gray-400">Matric Part II</p>
            </a>

            <a href="/board?grade=11" class="grade-card p-8 md:p-10 rounded-[35px] text-center bg-white group">
                <div class="text-4xl font-black text-gray-200 group-hover:text-[#19c880] mb-4">11</div>
                <h3 class="text-xl md:text-2xl font-bold">11th Class</h3>
                <p class="text-sm text-gray-400">Inter Part I</p>
            </a>

            <a href="/board?grade=12" class="grade-card p-8 md:p-10 rounded-[35px] text-center bg-white group">
                <div class="text-4xl font-black text-gray-200 group-hover:text-[#19c880] mb-4">12</div>
                <h3 class="text-xl md:text-2xl font-bold">12th Class</h3>
                <p class="text-sm text-gray-400">Inter Part II</p>
            </a>

        </div>

    </main>

    <script>
        function toggleClasses() {
            const options = document.getElementById('classOptions');
            const btn = document.getElementById('mainBtn');
            
            // Toggle Display
            if (options.style.display === 'grid') {
                // Logic to hide if clicked again
                options.classList.remove('show');
                setTimeout(() => { options.style.display = 'none'; }, 500);
            } else {
                // Show options
                options.style.display = 'grid';
                setTimeout(() => {
                    options.classList.add('show');
                    // Scroll down smoothly
                    window.scrollTo({
                        top: btn.offsetTop + 100,
                        behavior: 'smooth'
                    });
                }, 10);
                
                // Update Button
                btn.innerHTML = '<i class="fa fa-chevron-down mr-3"></i> Select from Below';
                btn.classList.replace('bg-[#19c880]', 'bg-[#3f3a64]');
            }
        }
    </script>

</body>
</html>
