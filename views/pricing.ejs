<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clean Payment Interface</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body { 
            font-family: 'Plus Jakarta Sans', sans-serif; 
            background-color: #f4f7f6;
        }

        /* Elegant custom file input */
        .upload-zone {
            position: relative;
            border: 2px dashed #e2e8f0;
            background: #ffffff;
            transition: all 0.2s ease-in-out;
        }

        .upload-zone:hover {
            border-color: #19c880;
            background: #f0fdf9;
        }

        .upload-zone input[type="file"] {
            position: absolute;
            inset: 0;
            opacity: 0;
            cursor: pointer;
            z-index: 10;
        }

        .copy-toast {
            visibility: hidden;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .copy-toast.show {
            visibility: visible;
            opacity: 1;
        }
    </style>
</head>
<body class="flex items-center justify-center min-h-screen p-4">

    <div id="paymentModal" class="w-full max-w-[440px] bg-white rounded-[32px] shadow-2xl shadow-gray-200/50 overflow-hidden relative border border-gray-100">
        
        <div class="p-8 pb-0 flex justify-between items-start">
            <div>
                <h2 class="text-2xl font-bold text-slate-800">Payment</h2>
                <p class="text-slate-500 text-sm mt-1">Submit your transaction details</p>
            </div>
            <button onclick="closePayment()" class="p-2 bg-slate-50 hover:bg-red-50 text-slate-400 hover:text-red-500 rounded-full transition-colors">
                <i class="fa-solid fa-xmark"></i>
            </button>
        </div>

        <div class="p-8 pt-6 space-y-6">
            
            <div class="flex items-center justify-between p-5 bg-slate-900 rounded-2xl text-white">
                <span class="text-slate-400 text-sm font-medium">Total Amount</span>
                <span class="text-2xl font-bold" id="selectedAmount">Rs. 500</span>
            </div>

            <div class="space-y-3">
                <label class="text-[11px] font-bold text-slate-400 uppercase tracking-widest ml-1">Transfer To</label>
                <div class="flex items-center justify-between p-4 bg-slate-50 rounded-2xl border border-slate-100 group">
                    <div>
                        <p class="text-[10px] text-emerald-600 font-extrabold uppercase mb-0.5">JazzCash / EasyPaisa</p>
                        <p class="text-lg font-bold text-slate-800 tracking-tight" id="accountNum">03448007154</p>
                    </div>
                    <button onclick="copyNumber()" class="h-10 w-10 flex items-center justify-center bg-white text-slate-400 hover:text-emerald-500 rounded-xl shadow-sm border border-slate-100 transition-all active:scale-90">
                        <i class="fa-regular fa-copy"></i>
                    </button>
                </div>
            </div>

            <form id="paymentForm" class="space-y-4">
                
                <div class="space-y-2">
                    <label class="text-[11px] font-bold text-slate-400 uppercase tracking-widest ml-1">Transaction ID</label>
                    <input type="text" id="transactionId" placeholder="Enter 11-digit ID" required
                        class="w-full px-5 py-4 bg-slate-50 border border-slate-200 rounded-2xl focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 outline-none transition-all text-slate-800 font-medium">
                </div>

                <div class="space-y-2">
                    <label class="text-[11px] font-bold text-slate-400 uppercase tracking-widest ml-1">Screenshot (Today Only)</label>
                    <div class="upload-zone p-6 rounded-2xl text-center" id="dropzone">
                        <input type="file" id="screenshot" accept="image/*" required>
                        
                        <div id="idleState">
                            <div class="h-12 w-12 bg-emerald-50 text-emerald-500 rounded-full flex items-center justify-center mx-auto mb-3">
                                <i class="fa-solid fa-plus text-lg"></i>
                            </div>
                            <p class="text-sm font-semibold text-slate-700">Add payment proof</p>
                            <p class="text-[11px] text-slate-400 mt-1">Image must be from today</p>
                        </div>

                        <div id="successState" class="hidden">
                            <i class="fa-solid fa-circle-check text-3xl text-emerald-500 mb-2"></i>
                            <p class="text-sm font-bold text-slate-800 truncate px-4" id="fileName">image.png</p>
                            <button type="button" class="text-[11px] text-red-500 font-bold uppercase mt-2 hover:underline">Replace File</button>
                        </div>
                    </div>
                    <p id="errorMsg" class="text-[10px] text-red-500 font-bold text-center mt-2 hidden"></p>
                </div>

                <button type="submit" class="w-full py-4 bg-emerald-500 hover:bg-emerald-600 text-white font-bold rounded-2xl shadow-lg shadow-emerald-500/20 transition-all active:scale-[0.98] mt-2">
                    Confirm Payment
                </button>
            </form>
        </div>

        <div id="toast" class="copy-toast absolute bottom-6 left-1/2 -translate-x-1/2 px-4 py-2 bg-slate-800 text-white text-xs font-bold rounded-full shadow-xl">
            Number copied!
        </div>
    </div>

    <script>
        const fileInput = document.getElementById('screenshot');
        const idleState = document.getElementById('idleState');
        const successState = document.getElementById('successState');
        const fileNameDisp = document.getElementById('fileName');
        const errorMsg = document.getElementById('errorMsg');
        const dropzone = document.getElementById('dropzone');

        fileInput.addEventListener('change', function() {
            if (this.files && this.files[0]) {
                const file = this.files[0];
                const now = new Date();
                const fileDate = new Date(file.lastModified);
                
                // Compare Date, Month, and Year
                const isToday = now.toDateString() === fileDate.toDateString();

                if (!isToday) {
                    errorMsg.innerText = "Error: Screenshot must be captured today.";
                    errorMsg.classList.remove('hidden');
                    dropzone.style.borderColor = "#ef4444";
                    this.value = ""; // Reset
                    idleState.classList.remove('hidden');
                    successState.classList.add('hidden');
                } else {
                    errorMsg.classList.add('hidden');
                    dropzone.style.borderColor = "#10b981";
                    fileNameDisp.innerText = file.name;
                    idleState.classList.add('hidden');
                    successState.classList.remove('hidden');
                }
            }
        });

        function copyNumber() {
            const num = document.getElementById('accountNum').innerText;
            navigator.clipboard.writeText(num);
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 2000);
        }

        function closePayment() {
            document.getElementById('paymentModal').classList.add('hidden');
        }

        document.getElementById('paymentForm').onsubmit = async function(e) {
            e.preventDefault();
            const form = new FormData();
            const transactionId = document.getElementById('transactionId').value.trim();
            const screenshot = document.getElementById('screenshot').files[0];
            const plan = 'weekly_unlimited';
            const amount = 500;
            const books = JSON.stringify([]);
            const paymentNumber = document.getElementById('accountNum').innerText.trim();

            if (!transactionId || transactionId.length !== 11) {
                alert('Transaction ID must be 11 digits.');
                return;
            }
            if (!screenshot) {
                alert('Please attach today\'s screenshot');
                return;
            }

            form.append('transactionId', transactionId);
            form.append('screenshot', screenshot);
            form.append('plan', plan);
            form.append('amount', amount);
            form.append('books', books);
            form.append('paymentNumber', paymentNumber);

            try {
                const createRes = await fetch('/api/payment/create-link', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        plan,
                        books: JSON.parse(books),
                        userEmail: localStorage.getItem('paperify_user_email') || ''
                    })
                });
                const createData = await createRes.json();
                if (!createRes.ok || !createData.success) {
                    alert(createData.error || 'Unable to create payment link');
                    return;
                }

                const confirmRes = await fetch(`/api/payment/confirm/${encodeURIComponent(createData.linkId)}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ confirmCode: transactionId })
                });
                const confirmData = await confirmRes.json();
                if (!confirmRes.ok || !confirmData.success) {
                    alert(confirmData.error || 'Payment confirmation failed');
                    return;
                }

                alert('Payment confirmed successfully');
                // Optimistic flag for front-end gating in case session routes are delayed
                const expiresAtCheck = new Date();
                expiresAtCheck.setDate(expiresAtCheck.getDate() + 14);
                localStorage.setItem('paperify_paid_until', expiresAtCheck.toISOString());
            } catch (err) {
                alert('Network error, please try again.');
            }
        };
    </script>
</body>
</html>
